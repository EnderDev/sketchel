doctype html
html 
  include includes/head.pug
  body
    if authorized
        include includes/navbar-2 
    if !authorized
        include includes/navbar-1    


    section.hero.is-medium.is-primary.is-bold
      div.container.is-fluid
        div.hero-body
            if authorized
                h1.title <strong>Welcome back,</strong> #{username} <i class="em em-lower_left_paintbrush" aria-role="presentation" aria-label=""></i>
                h2.subtitle We've missed you.  
            if !authorized
                h1.title <strong>Sketchel</strong> <i class="em em-lower_left_paintbrush" aria-role="presentation" aria-label=""></i>,
                h2.subtitle The newest platform to upload drawings/animations.   
            if !authorized     
                div.field
                    p.control
                        a(href="/signup") 
                            button.button.is-primary.is-rounded Register for Sketchel here.
                            
                        a(href="/login") 
                            button.button.is-primary.is-rounded Or, you can login here.
            if authorized
                div.field
                    p.control
                        a(href="/hot") 
                            button.button.is-primary.is-rounded See the most popular posts.
                            
                        a(href="/feed") 
                            button.button.is-primary.is-rounded See your feed.
    
